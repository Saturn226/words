<!DOCTYPE html>
<html>
<head>
  <title>Words</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
</head>
<body>
  <div id='sidebar'>
    <!-- <div id="logo">
      <%#= link_to root_path do %>
        Image <%#= image_tag 'Words-logo.png'%>
      <%# end %>
    </div> -->

      <a><%= link_to 'Words', root_path, class: 'btn btn-default btn-primary' %></a>
      <a><%= link_to 'About', about_path, class: 'btn btn-default btn-primary' %></a>

    <% if !user_signed_in? %>
      <p class='sign_in'><%= link_to 'Log In', new_user_session_path, class: 'btn btn-success btn-primary' %></p>
    <% end %>

    <% if user_signed_in? %>
        <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-primary' %>
        <%= link_to 'Log Out', destroy_user_session_path, :method => :delete, class: 'btn btn-success btn-primary' %>
    <% end %>

    <% if current_page?(root_path) %>
      <p>All Posts</p>
    <% elsif current_page?(about_path) %>
      <p>About</p>
    <% else %>
      <%= link_to 'See All Posts', root_path, class: 'btn btn-success btn-primary' %>
    <% end %>

    <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: 'alert') %>
    <% end %>
  </div>

  <div class='container'>
    <%= yield %>
  </div>


</body>
</html>
