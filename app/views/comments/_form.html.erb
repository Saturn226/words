<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control" %>
  </p><br>

  <p>
    <%= f.submit 'Add Comment', class: 'btn btn-default btn-primary' %>
  </p>
<% end %>
