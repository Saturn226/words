<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id='errors'>
      <h2><%= pluralize(@post.errors.count, 'error') %> errors need to be fixed before we can save your post!</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>Tags:</p>

  <p>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  </p>

  <p>
    <%= f.fields_for :tags, @post.tags.build do |tag| %>
      <%= tag.label :name %>
      <%= tag.text_field :name %>
    <% end %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
