<% @posts.each do |post| %>
    <h2 class='title'><%= link_to post.title, post %></h2>
    <p class='date'><%= post.created_at.strftime("%B, %d, %Y") %></p>
    <div id="tags">
        Tags: <% post.tags.uniq.each do |tag| %>
          <% if tag.name != "" && tag.name != nil %>
             <%= tag.name %>
          <% end %>
        <% end %>
    </div>
<% end %>
